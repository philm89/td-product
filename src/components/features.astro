---
import { Icon } from "astro-icon";
import { t } from "i18next";

const features = [
  {
    title: t("components.features.feature1.title"),
    description: t("components.features.feature1.subtitle"),
    icon: "bx:bxs-briefcase",
  },
  {
    title: t("components.features.feature2.title"),
    description: t("components.features.feature2.subtitle"),
    icon: "bx:bxs-window-alt",
  },
  {
    title: t("components.features.feature3.title"),
    description: t("components.features.feature3.subtitle"),
    icon: "bx:bxs-data",
  },
  {
    title: t("components.features.feature4.title"),
    description: t("components.features.feature4.subtitle"),
    icon: "bx:bxs-bot",
  },
  {
    title: t("components.features.feature5.title"),
    description: t("components.features.feature5.subtitle"),
    icon: "bx:bxs-file-find",
  },
  {
    title: t("components.features.feature6.title"),
    description: t("components.features.feature6.subtitle"),
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    {t("pages.home.title2")}
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    {t("pages.home.subtitle2")}
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
