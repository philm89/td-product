---
import Link from "./ui/link.astro";
import { t } from "i18next";
import { localizePath } from "astro-i18next";


---

<div
  class="bg-black px-20 py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-3xl md:text-6xl">{t("components.cta.title")}</h2>
  <p class="text-slate-500 mt-4 text-lg md:text-xl">
    {t("components.cta.subtitle")}
  </p>
  <div class="flex mt-5">
    <Link href={localizePath("/contact")} style="inverted" class="m-5">{t("components.cta.contactButton")}</Link>
    <Link href={localizePath("/contact")} style="inverted" class="m-5">{t("components.cta.submitButton")}</Link>
  </div>
</div>
