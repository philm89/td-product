---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Sectionhead from "@components/sectionhead.astro";

changeLanguage("th");
---

<Layout title="แพ็คเกจจิ้ง">
  <Container>
    <Sectionhead>
      <Fragment slot="title">แพ็คเกจจิ้ง</Fragment>
      <Fragment slot="desc">Delivering high quality products for over 30 years.</Fragment>
    </Sectionhead>
    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Packaging Made Simple
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        ทางเราบริการออกแบบบรรจุภัณฑ์เเละให้คำปรึกษาด้านบรรจุภัณฑ์เเพื่อให้คุณได้ส่งมอบสินค้าที่ดีทึ่สุดให้แก่ลูกค้าและผู้บริโภคในเเบบที่คุณต้องการ ไม่ว่าจะเป็น บรรจุภัณฑ์ในรูปแบบของ กระดาษ หรือพลาสติก เพราะเราเชื่อว่าบรรจุภัณฑ์เป็นสิ่งสำคัญที่สุดเเละเป็นหนึ่งในปัจจัยให้ลูกค้าตัดสินใจซื้อสินค้า
      </p>
    </div>
  </Container>
  <Cta/>
</Layout>