---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Image } from "@astrojs/image/components";

changeLanguage("th");

const examples = [
  {
    name: "บิล ใบเสร็จรับเงิน"
  },
  {
    name: "นามบัตร"
  },
  {
    name: "โปสการ์ด"
  },
  {
    name: "ใบปลิว โบรชัวร์ แผ่นผับ"
  },
  {
    name: "บัตรเชิญ"
  },
  {
    name: "เเคลตาล็อค"
  },
  {
    name: "สติกเกอร์"
  },
  {
    name: "แฟ้ม"
  },
  {
    name: "ปฎิทิน"
  },
  {
    name: "เมนู"
  },
  {
    name: "ฉลาก ป้ายสินค้า"
  },
  {
    name: "ป้ายไวนิล"
  },
]
---

<Layout title="สี่งพิมพ์">
  <Container>
    <Sectionhead>
      <Fragment slot="title">สี่งพิมพ์</Fragment>
      <Fragment slot="desc">Delivering high quality products for over 30 years.</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Packaging Made Simple
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        สิ่งพิมพ์เป็นปัจจัยสำคัญในการสื่อสารกับกลุ่มลูกค้าที่คุณต้องการเข้าถึงทางเราให้บริการที่มาพร้อมคุณภาพเเละความรวดเร็วที่ทำให้เข้าหากลุ่มลูกค้าคุณได้มากยิ่งขึ้น อาทิเช่น
      </p>
      <ul>
        {examples.map((item) => (
          <ul>
            <li class="list-disc">{item.name}</li>
            </ul>
        ))}
      </ul>
    </div>
  </Container>
  <Cta/>
</Layout>