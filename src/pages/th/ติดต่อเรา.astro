---
import { changeLanguage } from "i18next";
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";

changeLanguage("th");
---

<Layout title="ติดต่อเรา">
  <Container>
    <Sectionhead>
      <Fragment slot="title">ติดต่อเรา</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contact Us</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">TD Product เปิดทำการทุกวัน จันทร์ ถึง ศุกร์ ในเวลา   9.00 - 18.00 ณ</p>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          ทางเรายินดีที่จะช่วยเหลือสามารถโทรติดต่อหาเราได้หรือหากท่านไม่สะดวกสามารถกรอกแบบฟอร์มด้านข้างเเละทางเราจะติดต่อกับภายใน 24 ชม
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>ซอยเพชรเกษม 51 แขวงบางแค เขตบางแค กรุงเทพฯ</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:hello@astroshipstarter.com"
              >info@tdproduct.net</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+66 98 828 3988">+66 98 828 3988</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
